<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/otp_dialog_header"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/otp_dialog_header"
        android:paddingLeft="@dimen/padding_standard_8dp"
        android:paddingRight="@dimen/padding_standard_8dp"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/otp_dialog_text"
        android:textSize="18dp"
        android:layout_below="@+id/header"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_standard_8dp"
        android:paddingRight="@dimen/padding_standard_8dp"
        android:textColor="@color/otp_dialog_header"
        android:fontFamily="sans-serif"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_otp"
        android:id="@+id/otp_text"
        android:layout_below="@+id/textView1"
        android:fontFamily="sans-serif-medium"
        android:inputType="textNoSuggestions|number"
        android:gravity="center_horizontal"
        android:paddingTop="2dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="@dimen/padding_standard_8dp"
        android:paddingLeft="@dimen/padding_standard_8dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/ok_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp_text"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:text="@string/submit" />

</RelativeLayout>
